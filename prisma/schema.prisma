generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mysql"
}

model User {
  id         Int      @id @default(autoincrement())
  first_name String
  last_name  String
  email      String   @unique
  address    String
  password   String
  role       Int    @default(1)
  createdAT  DateTime @default(now())
  isActive   Boolean  @default(true)
  teacher Teacher?
  student Student?
  parent Parent?
 
}
model Roles{
  id Int      @id @default(autoincrement())
  role String @unique 
}

model Teacher {
  id                    Int                     @id @default(autoincrement())
  userId                Int                     @unique
  joiningDate          DateTime                @default(now())
  user User @relation(fields: [userId],references: [id])
  teaherClasses TeacherClasses[]
 
}

model TeacherClasses {
  id         Int     @id @default(autoincrement())
  classId   Int
  teacherId Int 
  isActive  Boolean @default(true)
  teacher Teacher @relation(fields: [teacherId],references: [id])
  classes Class @relation(fields: [classId],references: [id])
  teacherClassSubject TeacherClassesSubject[]
  @@unique([teacherId,classId])
}

model TeacherClassesSubject {
  id         Int     @id @default(autoincrement())
  teacherClassId Int
  subjectId Int
  isActive  Boolean @default(true)
  subjects Subject @relation(fields: [subjectId],references: [id])
  teacherClasses TeacherClasses @relation(fields: [teacherClassId],references: [id])
  @@unique([teacherClassId,subjectId])
 
}

model Student {
  id             Int      @id @default(autoincrement())
  userId        Int      @unique
  AdmissionDate DateTime @default(now())
  rollNo        Int
  classId       Int 
  parentId Int
  user User @relation(fields: [userId],references: [id])
  parent Parent @relation(fields: [parentId],references: [id])
  class Class @relation(fields: [classId],references: [id])
  @@unique([userId,parentId])
}
model Class {
  id                    Int                     @id @default(autoincrement())
  className             String                  @unique
  isActive              Boolean                 @default(true)
  student Student[]
  teachers TeacherClasses[]
  classSubjects ClassSubjects[]
}

model Subject {
  id                    Int                     @id @default(autoincrement())
  subjectName           String  
  isActive              Boolean                 @default(true)
  teacherClassSubject TeacherClassesSubject[]
  classSubjects ClassSubjects[]
 
 
}
model ClassSubjects{
  id   Int                     @id @default(autoincrement())
  classId Int                 
  subjectId Int
  isActive              Boolean                 @default(true)
  class Class @relation(fields: [classId],references: [id])
  subject Subject @relation(fields: [subjectId],references: [id])
@@unique([classId,subjectId])
}

model Parent{
  id Int  @id @default(autoincrement())
  occupation String
  userId Int @unique
  isActive  Boolean                 @default(true)
  user User @relation(fields: [userId],references: [id])
  student Student[]
}